@model CRUD.Models.ProductList
@{
    ViewData["Title"] = "Create";
}
<div class="card">
    <form asp-controller="CRUD" asp-action="Create" method="post">
    <h1 class="card-header bg-black text-light d-block">Create Product</h1>
        <div class="card-body">
            <div class="">
                    <label asp-for="ProductName">Product Name:</label>
                <input class="form-control" autocomplete="off" placeholder="Enter Product Name" asp-for="ProductName" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="">
                <label asp-for="ProductDescription">Product Description:</label>
                <input class="form-control" autocomplete="off" asp-for="ProductDescription" placeholder="Enter Product Description" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="ProductFile">
                        Product Image:
                    </label>
                    <input class="form-control" autocomplete="off" placeholder="Enter product Image" asp-for="ProductFile" />
                    <span asp-validation-for="ProductFile" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Quantity">
                        Quanitity:
                    </label>
                    <input class="form-control" autocomplete="off" placeholder="Enter Quantity" asp-for="Quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                    <div class="col-md-4">
                        <label asp-for="Rate">
                            Rate:
                        </label>
                        <input class="form-control" autocomplete="off" placeholder="Enter Rate" asp-for="Rate" />
                        <span asp-validation-for="Rate" class="text-danger"></span>
                    </div>
        </div>

        <input type="submit" class="btn btn-dark py-2 my-2" />
        </div>
    </form>
</div>